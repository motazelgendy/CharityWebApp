@page
@model Charity.Pages.Admin.BloodBankmanage.CreateModel   


<form method="post" dir="rtl" class="custom-form donate-form">
    <div class="border p-3 mt-4">
        <div class="row pb-2"
        <h2 class="text-primary pl-3">
            انشاء مصنف جديد
        </h2>
        <hr />
        </div>
           <div class="mb-3">
              <label asp-for="@Model.bloodBank.Name"></label>
               <input asp-for="@Model.bloodBank.Name" class="form-control" />
               <span asp-validation-for="bloodBank.Name" class="text-danger"></span>
               
               </div>
                <div class="mb-3">
              <label hidden asp-for="@Model.bloodBank.UserId"></label>
               <input hidden asp-for="@Model.bloodBank.UserId" class="form-control" />
               
               </div>
      <div class="mb-3">
              <label asp-for="@Model.bloodBank.Address"></label>
               <input asp-for="@Model.bloodBank.Address" class="form-control" />
                  <span asp-validation-for="bloodBank.Address" class="text-danger"></span>
               
               </div>

    
        <div class="mb-3">
            <label asp-for="@Model.bloodBank.Latitude"></label>
            <input asp-for="@Model.bloodBank.Latitude" class="form-control" />
            <span asp-validation-for="bloodBank.Latitude" class="text-danger"></span>

        </div>

        <div class="mb-3">
            <label asp-for="@Model.bloodBank.Longitude"></label>
            <input asp-for="@Model.bloodBank.Longitude" class="form-control" />
            <span asp-validation-for="bloodBank.Longitude" class="text-danger"></span>

        </div>
        <button type="submit" class="form-control" style="width:150px;">انشاء</button>
               
           </div>

    </div>
</form>