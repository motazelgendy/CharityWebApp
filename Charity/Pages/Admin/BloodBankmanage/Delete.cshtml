@page
@model Charity.Pages.Admin.BloodBankmanage.DeleteModel


<form method="post" dir="rtl" class="custom-form donate-form">
    <input hidden asp-for="bloodbank.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2"
        <h2 class="text-primary pl-3">
            حذف المصنف
        </h2>
        <hr />
        </div>
           <div class="mb-3">
              <label asp-for="@Model.bloodbank.Name"></label>
               <input asp-for="@Model.bloodbank.Name" disabled class="form-control" />
               <span asp-validation-for="bloodbank.Name" class="text-danger"></span>
               
               </div>
      <div class="mb-3">
            <label asp-for="@Model.bloodbank.Address "></label>
            <input asp-for="@Model.bloodbank.Address" disabled class="form-control" />
            <span asp-validation-for="bloodbank.Address" class="text-danger"></span>
               
               </div>
        <div class="mb-3">
            <label asp-for="@Model.bloodbank.Latitude"></label>
            <input asp-for="@Model.bloodbank.Latitude" disabled class="form-control" />
            <span asp-validation-for="bloodbank.Latitude" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="@Model.bloodbank.Longitude"></label>
            <input asp-for="@Model.bloodbank.Longitude" disabled class="form-control" />
            <span asp-validation-for="bloodbank.Longitude" class="text-danger"></span>

        </div>
               <button type="submit" class="btn-primary" style="width:150px;">حذف</button>
               
           </div>

    </div>
</form>