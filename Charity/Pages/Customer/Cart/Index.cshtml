@page
@model Charity.Pages.Customer.Cart.IndexModel

<form method="post">
    <br />
    @if(Model.ShoppingCartList.Count() == 0)
    {
    <div class="container">
            <div class="col-lg-12 col-12 text-center mb-4">
                <h1 class="text-muted text-center">السلة فارغة </h1>

                <img src="~/imgs/empty-cart.png" width="30%" />
            </div>

            </div>

     

    }

    else{
    <div class="container" dir="rtl">
        <div class="card">
            
                
            
            <div class="card-header text-light ml-0 ">
                <div class="row">
                    <div class="col-6 pt-2">
                        السلة
                    </div>
                    <div class="col-12 text-sm-center col-md-6 text-md-start ">
                            <a href="~/Customer/Home/Index" class="btn btn-secondary">استكمال التصفح</a>
                    </div>
                </div>
            </div>
           
            <div class="card-body">
                @foreach (var item in Model.ShoppingCartList)
                {
                <div class="row">
                    <div class="d-none d-lg-block col-lg-2 text-center py-2">
                        <img src="@item.ProgramItem.Image" class="rounded" width="120" height="80" />
                    </div>
                    <div class="col-12 text-sm-center text-md-start col-md-5 pt-md-4 ">
                        <h4><strong>@item.ProgramItem.Name</strong></h4>

                                <div class="badge bg-muted text-center" style="font-size:12px;">
                            @item.ProgramItem.Category.Name
                        </div>
                                <div class="badge bg-muted text-center" style="font-size:12px;">
                                @item.ProgramItem.ProgramType.Name
                        </div>
                    </div>
                    <div class="col-12 text-sm-center col-md-5 text-md-start row pt-3">
                        <div class="col-4 text-md-right pt-md-3" style="padding-top:5px;">
                                <h6><strong>@item.Count <span class="text-muted">*</span> @item.ProgramItem.Price </strong></h6>
                        </div>
                        <div class="col-6 col-sm-4 col-lg-6">
                                    <button type="submit" class="btn btn-secondary"
                                    asp-page-handler="plus" asp-route-cartId="@item.Id">
                                    
                                <i class="bi bi-plus-square"></i>
                            </button>
                            <button type="submit" class="btn btn-danger"
                                    asp-page-handler="minus" asp-route-cartId="@item.Id">
                                    >
                                <i class="bi bi-dash-square"></i>
                            </button>
                        </div>
                        <div class="col-2 col-sm-4 col-lg-2 text-right">
                                    <button type="submit" class="btn btn-outline-secondary"
                                    asp-page-handler="remove" asp-route-cartId="@item.Id">
                                    >
                                <i class="bi bi-trash-fill"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <hr />
                }


                <div class="row">
                    <div class="col-12 col-md-5">
                    </div>
                    <div class="col-12 col-md-6 offset-md-1 col-lg-4 offset-lg-3 pr-4">
                        <ul class="list-group">
                            <li class="list-group-item d-flex justify-content-between bg-light">
                                    <span class="text-muted"> الاجمالى </span>
                                    <strong class="text-muted">@Model.CartTotal</strong>
                            </li>
                        </ul>
                    </div>
                </div>


            </div>
            <div class="card-footer" >
                <div class="col-3 text-sm-center col-md-6 text-md-start">
                        <a asp-page="Summary" class="btn btn-secondary btn-sm">التوجه للدفع</a>
                </div>
            </div>
        </div>
    </div>
    }
</form>

