@page
@model Charity.Pages.Customer.Chat.OnlineClinicModel
@using Charity.Utility;
@using Microsoft.AspNetCore.Identity

<div class="container border m-3 p-4" dir="rtl">
    @if (User.IsInRole(UserRole.AdminRole)|| User.IsInRole(UserRole.CustomerRole))
        {
    <div class="row">
       
        <div class="col-3">اختر طبيب</div>
        <div class="col-4">
            <select class="form-select" id="ddlSelUser">
            </select>

        </div>

    </div>
        }

        else
    {
        <div class="row">

            <div class="col-3">اختر مريض</div>
            <div class="col-4">
                <select class="form-select" id="ddlSelUser">
                </select>

            </div>

        </div>
    }

    <div class="row pt-3">
        <div class="col-3">ارسل رسالة</div>
        <div class="col-4"><input type="text" class="form-control" id="txtPrivateMessage"></div>
        <div class="col-3">
            <input type="button" class="btn btn-secondary" onclick="sendPrivateMessage();" id="sendButton" value="ارسل رسالة" />
        </div>
    </div>
</div>

<div class="container border m-3 p-4 bg-light">

    <div class="row" style="min-height:200px;">
        <div class="col-12">
            المحادثة:
            <ul id="messagesList"></ul>
        </div>
    </div>
</div>


<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>