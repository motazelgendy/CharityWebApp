@page
@model Charity.Pages.Customer.Home.DetailsModel

<section class="section-padding" dir="rtl">
<div class="container" dir="rtl">
        <form method="post" class="custom-form donate-form">
        <input asp-for="ShoppingCart.ProgramItemId" hidden />
        <input asp-for="ShoppingCart.AppUserId" hidden />
        <div class="container backgroundWhite">
            <div class="card">
                <div class="card-header">
                    <div class="text-light ml-0 row ">
                    <div class="col-12 col-md-6 pt-2">
                                <h1 class="text-muted">@Model.ShoppingCart.ProgramItem.Name</h1>
                    </div>
                    <div class="col-12 col-md-6 text-end pt-2">
                            <h1 class="text-muted"> EGP @Model.ShoppingCart.ProgramItem.Price</h1>
                    </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-8">
                                <div class="row">

                                    <div class="col-12">
                                            <span class="badge bg-secondary p-3 h3">@Model.ShoppingCart.ProgramItem.Category.Name</span>
                                            <span class="badge bg-info p-3">@Model.ShoppingCart.ProgramItem.ProgramType.Name</span>
                                        <h3 class="text-success"></h3>

                                        <p class="text-secondary">@Html.Raw(Model.ShoppingCart.ProgramItem.Description)</p>

                                              <div class="form-floating my-2">
                                           <input  asp-for="ShoppingCart.Count" class="form-control" aria-required="true" />
                                            <label asp-for="ShoppingCart.Count"></label>
                                            <span asp-validation-for="ShoppingCart.Count" class="text-bg-danger"> </span>
                                        </div>
                                          
                                    </div>

                                </div>
                            </div>
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@Model.ShoppingCart.ProgramItem.Image" width="100%" class="rounded" />
                            </div>


                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-6  ">
                            <a class="btn btn-success btn-square form-control" style="height:50px;">العودة للقائمة</a>
                        </div>
                        <div class="col-12 col-md-6 ">
                            <button type="submit" class="btn btn-primary btn-square form-control" style="height:50px;">اضف الى السلة</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

</section>
